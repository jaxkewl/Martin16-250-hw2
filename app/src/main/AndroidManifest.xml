<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marshong" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.marshong.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marshong.ui.AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:parentActivityName="com.marshong.ui.MainActivity"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.marshong.ui.TaskDetail"
            android:label="@string/title_activity_task_detail"
            android:parentActivityName="com.marshong.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marshong.ui.MainActivity" />
        </activity>
        <!--The path to the provider-->
        <provider
            android:name="com.marshong.data.TaskProvider"
            android:authorities="com.marshong"
            android:exported="false" />
    </application>

</manifest>
